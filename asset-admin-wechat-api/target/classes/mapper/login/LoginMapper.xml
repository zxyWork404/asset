<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.asset.wechat.login.mapper.LoginMapper">

    <insert id="insertLogin">
        INSERT INTO `sx_login`
        (
        <trim suffixOverrides=",">
            <if test="openid!=null">
                `openid`,
            </if>
            <if test="appid!=null">
                `appid`,
            </if>
            <if test="phone!=null">
                `phone`,
            </if>
            <if test="isDelete!=null">
                `isDelete`,
            </if>
            <if test="code!=null">
                `code`,
            </if>
            <if test="createTime!=null">
                `createTime`,
            </if>
        </trim>
        )
        VALUES
        (
        <trim suffixOverrides=",">
            <if test="openid!=null">
                #{openid},
            </if>
            <if test="appid!=null">
                #{appid},
            </if>
            <if test="phone!=null">
                #{phone},
            </if>
            <if test="isDelete!=null">
                #{isDelete},
            </if>
            <if test="code!=null">
                #{code},
            </if>
            <if test="createTime!=null">
                #{createTime},
            </if>
        </trim>
        )
    </insert>


    <select id="selectLogin" parameterType="String" resultType="com.asset.wechat.login.entiy.Login">
        SELECT openid,phone,appid FROM sx_login
        WHERE openid= #{openid}
    </select>

</mapper>